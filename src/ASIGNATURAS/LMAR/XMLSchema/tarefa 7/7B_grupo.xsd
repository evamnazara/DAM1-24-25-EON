<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:attribute name="nome" type="xs:string"/>
  <xs:attribute name="apelido1" type="xs:string"/>
  <xs:attribute name="apelido2" type="xs:string"/>

  <xs:attributeGroup name="nombreCompleto">
    <xs:attribute ref="nome" use="required"/>
    <xs:attribute ref="apelido1" use="required"/>
    <xs:attribute ref="apelido2" use="optional"/>
  </xs:attributeGroup>

</xs:schema>
