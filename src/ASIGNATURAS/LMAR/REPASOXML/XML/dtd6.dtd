                            <!ELEMENT editorial(#PCDATA)>
                            <!ELEMENT autor (#PCDATA)>
                            <!ELEMENT ano (#PCDATA)>

<!ATTLIST libro 
        ISBN CDATA #REQUIRED
>

] >


<! [ % artigo;
            <!ELEMENT material (artigo*)>
            <!ELEMENT artigo (titulo,revista) >
                  <!ELEMENT revista (nome, paxina) >
